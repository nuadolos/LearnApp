@model LearnEF.Entities.Learn

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>

<div class="row">
    <div class="col-md-4 mt-5">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="Timestamp"/>
            <input type="hidden" asp-for="UserId"/>
            <input type="hidden" asp-for="CreateDate"/>
            
            <h4>Задание</h4>
            <hr/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="Title" class="control-label fs-4"></label>
                <input asp-for="Title" class="form-control mt-2"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label fs-4"></label>
                <input asp-for="Description" class="form-control mt-2"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Deadline" class="control-label fs-4"></label>
                <input asp-for="Deadline" class="form-control mt-2"/>
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Learn" asp-action="Index" asp-route-groupId="@Model.GroupId">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
