@model LearnEF.Entities.Learn

@{
    ViewData["Title"] = "Создание";
}

<h2>Создание</h2>

<div class="row">
    <div class="col-md-4 mt-5">
        <form asp-action="Create" asp-route-groupId="@Model.GroupId">
            <input type="hidden" asp-for="CreateDate" value="@DateTime.Now"/>
            <input type="hidden" asp-for="UserId" value="1"/>
            @Html.EditorForModel("Learn")
            <div class="form-group mt-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-groupId="@Model?.GroupId">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
