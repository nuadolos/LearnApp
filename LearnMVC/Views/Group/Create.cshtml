@model LearnEF.Entities.Group

@{
    ViewData["Title"] = "Создание";
}

<style>
  .select {
    padding: 10px;
    width: 300px;
    font-size:16px;
    border: 1px solid teal;
    border-bottom: 3px solid teal;
  }
</style>

<h2>Создание</h2>

<div class="row">
    <div class="col-md-4 mt-5">
        <form asp-action="Create">
            @Html.EditorForModel("Group")

            <div class="form-group mt-3">
                <label asp-for="GroupTypeId" class="control-label fs-4"></label>
                <select asp-for="GroupTypeId" asp-items="ViewBag.GroupTypeId" class="select form-control mt-2"></select>
                <span asp-validation-for="GroupTypeId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserIndex">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
