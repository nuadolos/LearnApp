@model LearnEF.Entities.Attach

<div>
    <hr />

    @if (Model.IsAttached == false)
    {
        <form asp-action="AttachFile" asp-controller="Learn"
            asp-route-learnId="@Model.LearnId" enctype="multipart/form-data">
            <input type="file" name="attachFile" class="form-control mt-2"/>
            <input type="submit" value="Прикрепить" class="btn btn-primary"/>
        </form>
    }
    else
    {
        <form asp-action="UnpinFile" asp-controller="Learn"
            asp-route-id="@Model.Id" asp-route-learnId="@Model.LearnId">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Rating)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.HasRated)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.FileName)
                </dd>
            </dl>

            <input type="submit" value="Открепить" class="btn btn-danger"/>
        </form>

         <form asp-action="DownloadStudentFile" asp-controller="Learn" asp-route-id="@Model.Id">
            <input type="submit" value="Загрузить" class="btn btn-primary mt-4"/>
        </form>
    }

    <hr />
</div>