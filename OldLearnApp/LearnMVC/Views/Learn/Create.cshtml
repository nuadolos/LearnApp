@model LearnMVC.Models.LearnViewModel

@{
    ViewData["Title"] = "Создание";
}

<h2>Создание</h2>

<div class="row">
    <div class="col-md-4 mt-5">
        <form asp-action="Create" asp-route-groupId="@Model.GroupId" enctype="multipart/form-data">
            <input type="hidden" asp-for="CreateDate" value="@DateTime.Now"/>
            
            <h4>Задание</h4>
            <hr/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="Title" class="control-label fs-4"></label>
                <input asp-for="Title" class="form-control mt-2"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label fs-4"></label>
                <input asp-for="Description" class="form-control mt-2"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Deadline" class="control-label fs-4"></label>
                <input asp-for="Deadline" class="form-control mt-2"/>
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="FilesContent" class="control-label fs-4"></label>
                <input type="file" asp-for="FilesContent" class="form-control mt-2"/>
                <span asp-validation-for="FilesContent" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-groupId="@Model?.GroupId">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
