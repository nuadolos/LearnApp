@using LearnEF.Entities
@model IEnumerable<Group>

@{
    ViewData["Title"] = "Список";
}

<h1>Список групп</h1>

<p>
    <a asp-action="Create">Создать</a>
    <a asp-action="MemberIndex">Участник</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <label>Название</label>
            </th>
            <th>
                <label>Описание</label>
            </th>
            <th>
                <label>Дата создания</label>
            </th>
            <th>
                <label>Тип</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                    <label> | </label>
                    <a asp-action="Details" asp-route-id="@item.Id">Подробно</a>
                    <label> | </label>
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }   
    </tbody>
</table>
