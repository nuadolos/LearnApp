@model LearnEF.Entities.IdentityModel.UserData

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>

<div class="row">
    <div class="col-md-4 mt-5">
        <form asp-action="Edit">
            <input asp-for="Password" type="hidden"/>
            <input asp-for="Id" type="hidden"/>
            @Html.EditorForModel("Users")
            <div class="form-group mt-3">
                <label asp-for="Enabled" class="control-label fs-4"></label>
                <input asp-for="Enabled"/>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
