@model LearnEF.Entities.IdentityModel.User

@{
    ViewData["Title"] = "Подробно";
}

<h1>Подробности</h1>

<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User?.Identity?.Name != Model.Email)
    {
        @if (Model.FollowingHim == true)
        {
            <form asp-action="Unfollow" asp-route-userId="@Model.Id">
                <div class="form-group">
                    <input type="submit" value="Отписаться" class="btn btn-danger"/>
                </div>
            </form>
        }
        else
        {
            <form asp-action="Follow" asp-route-userId="@Model.Id">
                <div class="form-group">
                    <input type="submit" value="Подписаться" class="btn btn-primary"/>
                </div>
            </form>
        }
    }
    else
    {
        <a asp-action="Following">Мои отслеживаемые</a>
        <label> | </label>
        <a asp-action="Followers">Мои подписчики</a>

    }

    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
